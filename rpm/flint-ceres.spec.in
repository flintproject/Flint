Summary: Ceres Solver for Flint
Name: flint-ceres
Version: ceres_VERSION
Release: ceres_RELEASE%{?dist}
License: BSD-3-clause
URL: http://ceres-solver.org/
Source0: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root
BuildRequires: cmake
BuildRequires: make

%description
This is a Ceres Solver package for Flint.

%global debug_package %{nil}

%prep
%setup -q

%build
install -d build
(cd build && \
	cmake -DCMAKE_INSTALL_PREFIX=/opt/flint -DEIGEN_INCLUDE_DIR=FLINT_INCLUDE_DIR \
	-DMINIGLOG=ON \
	-DBUILD_SHARED_LIBS=ON \
	-DGFLAGS=OFF \
	-DSUITESPARSE=OFF \
	-DCXSPARSE=OFF \
	-DLAPACK=OFF \
	..)
make -C build

%install
rm -rf %{buildroot}
make -C build install DESTDIR=%{buildroot}

%clean
rm -rf %{buildroot}

%post
/sbin/ldconfig

%postun
/sbin/ldconfig

%files
%defattr(-,root,root,-)
%doc
/opt/flint/include/ceres/*
/opt/flint/lib64/cmake/Ceres/*
/opt/flint/lib64/libceres.*

%changelog
